@Library('jenkins-ansible-shared-lib') _

pipeline {
    agent any

    stages {
        stage('Deploy with Ansible') {
            steps {
                ansibleRun(
                    INVENTORY: 'inventory',
                    PLAYBOOK: 'site.yml',
                    SSH_CREDENTIAL_ID: 'ansible-ssh-key'
                )
            }
        }
    }
}
